<div class="w-full max-w-sm p-6 m-auto bg-white rounded-md shadow-md dark:bg-gray-800">
  <h1 class="text-3xl font-semibold text-center text-gray-700 dark:text-white">Enterprise Login</h1>

  <%= form_with url: workos_sessions_path, method: :post, class: 'mt-6' do |form| %>
    <div>
      <%= form.label :query, "Domain (e.g. mydomain.com)", class: 'block text-sm text-gray-800 dark:text-gray-200' %>
      <%= form.text_field :domain,
        class: 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring',
        placeholder: 'mydomain.com', required: true
      %>
    </div>
    <div class="mt-6">
      <%= form.submit "Login", class: 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600"' %>
    </div>
  <% end %>
</div>
